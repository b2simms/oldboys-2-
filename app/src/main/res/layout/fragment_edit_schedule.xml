<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team (home):"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:textColor="#0099FF"
            android:id="@+id/team_home"
            android:layout_gravity="left" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:maxLength="50"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:ems="10"
            android:id="@+id/edit_team_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team (away):"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:scrollHorizontally="true"
            android:textColor="#0099FF"
            android:id="@+id/team_away" />

        <EditText
            android:layout_width="match_parent"

            android:layout_height="40dp"
            android:textColor="#000000"
            android:maxLength="50"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="2dp"
            android:ems="10"
            android:id="@+id/edit_team_away" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:textColor="#0099FF"
            android:id="@+id/location" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLength="50"
            android:padding="2dp"
            android:ems="10"
            android:id="@+id/edit_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date (Ex. Jun-12):"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:textColor="#0099FF"
            android:id="@+id/date" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLength="50"
            android:padding="2dp"
            android:ems="10"
            android:id="@+id/edit_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score (home):"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:textColor="#0099FF"
            android:id="@+id/score_home" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLength="50"
            android:padding="2dp"
            android:ems="10"
            android:id="@+id/edit_score_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score (away):"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:textColor="#0099FF"
            android:id="@+id/score_away" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLength="50"
            android:padding="2dp"
            android:ems="10"
            android:id="@+id/edit_score_away" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/button_blue_gb"
            style="@style/ButtonText"
            android:text="Update" />


    </LinearLayout>
</ScrollView>